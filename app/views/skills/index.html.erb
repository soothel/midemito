<p style="color: green"><%= notice %></p>

<h1 class="text-center">
  <u>Habilidades de <%= current_user.str_complete_name %></u>
</h1>

<% if @skill.nil? %> 
  <div class="  pt-3">
  <h2 class="text-danger">No hay datos registrados, por favor click en Nuevo para Continuar</h2>
  <p><%= link_to "Nuevo", new_skill_path, class: "btn btn-primary" %></p>
  </div>
<% else %>
  <div class="row pt-3">
	<div class="col-xl-6">
		<div class="card">
		  <div class="card-header">
		    Descripci√≥n
		  </div>
		  <div class="card-body">
		    <%= simple_format(@skill.name) %>
		  </div>
		</div>		
	</div>
    
    <div class="col-xl-6">
		<div class="card">
		  <div class="card-header">
		    Especialidades
		  </div>
		  <div class="card-body">
			  <% @skill.skill_details.each do |skill_detail| %>
			    <%= skill_detail.name %>
			    
				<div class="progress">
				  <div class="progress-bar progress-bar-striped bg-success"  style="width: <%= skill_detail.ratio %>%"></div>
				</div>	   
				<br> 
			  <% end %>
		  </div>
		</div>	    	
	 


	</div>
  </div>

  <%= link_to "Editar", edit_skill_path(@skill.id), class: "btn btn-primary" %>
<% end %>
